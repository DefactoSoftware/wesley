<header>
  <div class="wrap">

    <a href="/">
      <img src="assets/opt-logo.png" alt="OPT" class="logo">
    </a>

    <ul class="links">
      <li>
        {{#link-to 'opt'}}
          {{t 'navigation.theOPT'}}
        {{/link-to}}
      </li>
      <li>
        {{#link-to 'video'}}
          {{t 'navigation.video'}}
        {{/link-to}}
      </li>
      <li>
        {{#link-to 'instructions'}}
          {{t 'navigation.instructions'}}
        {{/link-to}}
      </li>
      <li>
        {{#link-to 'prom'}}
          {{t 'navigation.prom'}}
        {{/link-to}}
      </li>
      <li>
        {{#link-to 'option'}}
          {{t 'navigation.opt'}}
        {{/link-to}}
      </li>
      <li>
        <a {{action 'changeLocaleEn'}}>
          <img alt="Nederlands" src="assets/en.gif" class="flag">
        </a>
        <a {{action 'changeLocaleNl'}}>
          <img alt="Nederlands" src="assets/nl.gif" class="flag">
        </a>
      </li>
    </ul>
  </div>
</header>
